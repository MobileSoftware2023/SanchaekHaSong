<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/image_border_line_transparent" />
            <item android:drawable="@drawable/snow2"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>
            <item
                android:drawable="@drawable/image_shade"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
            <item android:drawable="@drawable/check"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp"
                android:bottom="3dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/image_border_line_transparent" />
            <item android:drawable="@drawable/snow2"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>

        </layer-list>
    </item>
</selector>